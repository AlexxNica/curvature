<!-- Html for popups! -->
<div id="dialog-confirm" title="Delete This Network?">
  <p><span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
  This network will be removed forever! Are you sure?</p>
</div>
  
<div id="newNetwork" title="New Network">
  <input id="newNetworkName" value="name"/><br />
  Please Enter CIDR:
  <input id="newNetworkCIDR" value="10.0.0.0/24"/>
</div>

<div id="subnet" title="Enter CIDR">
  Please Enter CIDR:
  <input id="subnetCIDR" value="10.0.0.0/24"/>
</div>

<div id="vm" title="Enter VM Details">
  Please Enter Name:
  <input id="vmNAME" value=""/>
  <br />Flavor:
  <select id="vmFlavor">
  </select>
  <br />Keypair: 
  <select id="vmKeypair">
  </select>
  <br />Security Group:
  <select id="vmSecurityGroup">
  </select>
  <br />Floating IP Address: 
  <select id="vmFloating">
  </select> 
  <button id="vmAssociate"> Associate </button> 
  <br />
  <table id="vmFloatingTable">
    <thead class="ui-widget-header">
      <tr>
        <th> Floating IP Address </th>
        <th> Fixed IP Address </th>
        <th></th>
      <tr>
    </thead>
    <tbody class="ui-widget-content">
    </tbody>
  </table>
</div>

<div id="router" title="Enter Router Details">
  Please Enter Name:
  <input id="routerNAME" value=""/>
</div>

<div id="vncConsole" title="VNC Console">
</div>

<div id="aboutDialog" title="About">
  <%= image_tag "curvature_logo.png" %>
  <div style='text-align:center'>
    <h2>Version - Development</h2>
  </div>
</div>

<div id="addImageDialog" title="Upload Image">
  Name : <input id="imageName" value=""/><br/>
  Image : <input type="file" id="imageInput"/><br/>
  Format : <select id="imageFormat">
             <option value="aki">AKI - Amazon Kernel Image</option>
             <option value="ami">AMI - Amazon Machine Image</option>
             <option value="ari">ARI - Amazon Ramdisk Image</option>
             <option value="iso">ISO - Optical Disk Image</option>
             <option value="qcow2">QCOW2 - QEMU Emulator</option>
             <option value="raw">Raw</option>
             <option value="vdi">VDI</option>
             <option value="vhd">VHD</option>
             <option value="vmdk">VMDK</option>
           </select><br/>
  Minimum Disk (GB) <input id="minDisk" value=""/><br/>
  Minimum Ram (MB) <input id="minRam" value=""/><br/>
  Public <input id="imagePublic" type="checkbox"/><br/>
  <div id="newImageLoading" style="display:none;"><img src="/assets/loading.gif" width=30 height=30 /></div>
  <script type="text/javascript">
    //document.getElementById('imageInput').addEventListener('change', guessFormat, false);
    
  </script>
</div>

<div id="noNetworks" title="No Networks Found">
  No Networks Found, please create one to begin.
</div>

<div id="containerEditor" title="Container Builder" class="D3containerEditor">
  <div id="toolTabsContainer" class="toolTabsCSS">
    <ul id="toolName">
      <li><a href='#t' onClick='containerBuilder.tools.drawTools("tools")'>Tools</a></li>
      <li><a href='#t' onClick='containerBuilder.tools.drawTools("images")'>Images</a></li>
      <li><a href='#t' onClick='containerBuilder.tools.drawTools("networking")'>Networking</a></li>
      <li><a href='#t' onClick='containerBuilder.tools.drawTools("containers")'>Containers</a></li>
    </ul>
    <div id='t'></div>
  </div>
</div>

<div id="liveContainerViewer" title="Live Container Viewer" class="D3containerViewer">
  <div id="toolTabsContainerViewer" class="toolTabsCSS">
    <ul id="toolName">
      <li><a href='#t' onClick='liveContainer.tools.drawTools("tools")'>Tools</a></li>
      <li><a href='#t' onClick='liveContainer.tools.drawTools("images")'>Images</a></li>
      <li><a href='#t' onClick='liveContainer.tools.drawTools("networking")'>Networking</a></li>
      <li><a href='#t' onClick='liveContainer.tools.drawTools("containers")'>Containers</a></li>
    </ul>
    <div id='t'></div>
  </div>
</div>

