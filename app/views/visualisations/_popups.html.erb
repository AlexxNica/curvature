<div id="floatingIpDialog" title="Allocate Floating IPs">
  <table id="floatingIpTable" class="ui-widget">
    <thead class="ui-widget-header">
      <tr>
        <th> Floating IP Address </th>
        <th> Associated Instance </th>
        <th></th>
      <tr>
    </thead>
    <tbody class="ui-widget-content">
    </tbody>
  </table>
  <button id="allocateFloatingIp"> Allocate New Floating IP </button>
</div>

<div id="keyPairDialog" title="Keypairs">
  <table id="keyPairTable">
    <thead class="ui-widget-header">
      <tr>
        <th> Name </th>
        <th> Fingerprint </th>
        <th></th>
      <tr>
    </thead>
    <tbody class="ui-widget-content">
    </tbody>
  </table>
  <label> Name: </label>
  <input type="text" id="kpName"/>
  <button id="newKPButton"> New KeyPair </button>
  <iframe style="display:none" id="kpDownload"></iframe> 
</div>

<div id="securityGroupDialog" title="Security Groups">
  <table id="securityGroupTable">
    <thead class="ui-widget-header">
      <tr>
        <th> Name </th>
        <th> Description </th>
        <th></th>
        <th></th>
      <tr>
    </thead>
    <tbody class="ui-widget-content">
    </tbody>
    <tfoot class="ui-widget-footer">
      <tr>
        <td> <input type="text" id="sgName"/> </td>
        <td> <input type="text" id="sgDescription"/> </td>
        <td> <button id="newSGButton"> New Security Group </button> </td>
      </tr>
    </tfoot>
  </table>
</div>

<div id="securityRuleDialog" title="Security Group Rules">
  <table id="securityRuleTable">
    <thead class="ui-widget-header">
      <tr>
        <th> Protocol </th>
        <th> From Port </th>
        <th> To Port </th>
        <th> CIDR </th>
        <th></th>
      <tr>
    </thead>
    <tbody class="ui-widget-content">
    </tbody>
    <tfoot class="ui-widget-footer">
      <td> 
        <select id="ruleProtocol"> 
          <option value="tcp"> TCP </option>
          <option value="udp"> UDP </option>
          <option value="icmp"> ICMP </option>
        </select>
      </td>
      <td> <input type="text" id="ruleFromPort"/> </td>
      <td> <input type="text" id="ruleToPort"/> </td>
      <td> <input type="text" id="ruleIpRange"/> </td>
      <td> <button id="addNewSGRule"> Add New Rule </button> </td>
    </tfoot>
  </table>
</div>
