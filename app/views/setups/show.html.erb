  <div id="login">

          <img src="/assets/curvature_logo.png" style="display: block;margin-left:auto;margin-right:auto "></img>

          <h2> Setup </h2>

          <% if flash[:error] %>
                  <p class="error"> <%= flash[:error] %></p>
          <% end %>

          <% if flash[:notice] %>
                  <p class="notice"> <%= flash[:notice] %></p>
          <% end %>

          <% if flash[:unsupported] %>
                  <p class="error"> <%= flash[:unsupported] %></p>
                  <% if @unsupported %>
                    <p class="error">Please upgrade to a <a href="http://www.google.com/chrome">modern browser</a> for the best experience.</p>
                  <% end %>
          <% end %>

          <%= form_tag(:controller => "setups", :action => "create") do %>
                  <div class="field">
                          <%= label_tag(:ipaddr) %>
                          <%= text_field_tag(:ipaddr) %>
                  </div>
                  <div class="field">
                          <%= label_tag(:port) %> <br />
                          <%= text_field_tag(:port) %>
                  </div>
                  <div class="actions">
                          <%= submit_tag "Finish Setup" , :class => "button blue" %>
                  </div>
          <% end %>

  </div>

  <img id="ciscologo" src="/assets/cisco_logo.png">
